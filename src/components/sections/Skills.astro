---
import Section from "@/components/Section.astro";
import { skills } from "@/cv.json";
---

<Section title="Skills">
  <ul class="no-print">
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 8px;
    background: #eee;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  @media print {
    .no-print {
      display: none !important;
    }
  }
</style>
